<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:validation="http://www.mulesoft.org/schema/mule/validation"
      xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns:db="http://www.mulesoft.org/schema/mule/db"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
      http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
      http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd">

    <!-- VIOLATION: Flow without error handling -->
    <flow name="customer-api-main">
        <http:listener config-ref="HTTP_Listener_Config" 
                      path="/api/v1/customers" 
                      allowedMethods="GET,POST,PUT,DELETE"/>
        
        <!-- VIOLATION: Logging sensitive data -->
        <logger level="INFO" message="Request: #[payload] Headers: #[attributes.headers]"/>
        
        <choice>
            <when expression="#[attributes.method == 'GET']">
                <flow-ref name="get-customers-flow"/>
            </when>
            <when expression="#[attributes.method == 'POST']">
                <flow-ref name="create-customer-flow"/>
            </when>
            <otherwise>
                <!-- VIOLATION: Hardcoded response -->
                <set-payload value='{"error": "Method not allowed"}'/>
            </otherwise>
        </choice>
    </flow>

    <!-- VIOLATION: Poor naming convention -->
    <flow name="getCustomers">
        <db:select config-ref="Database_Config">
            <!-- VIOLATION: SQL injection risk -->
            <db:sql>SELECT * FROM customers WHERE status = 'ACTIVE'</db:sql>
        </db:select>
        
        <!-- VIOLATION: Exposing sensitive data -->
        <ee:transform>
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
    customers: payload map {
        id: $.customer_id,
        firstName: $.first_name,
        lastName: $.last_name,
        email: $.email,
        ssn: $.ssn,
        creditScore: $.credit_score
    }
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>

    <flow name="create-customer-flow">
        <!-- VIOLATION: Missing validation -->
        
        <db:insert config-ref="Database_Config">
            <db:sql>INSERT INTO customers (first_name, last_name, email, ssn) VALUES (:fn, :ln, :email, :ssn)</db:sql>
            <db:input-parameters><![CDATA[#[{
                fn: payload.firstName,
                ln: payload.lastName,
                email: payload.email,
                ssn: payload.ssn
            }]]]></db:input-parameters>
        </db:insert>
        
        <set-payload value='{"message": "Customer created"}'/>
    </flow>

</mule> 